# Production Environment Variables
# Copy this file to .env.production and fill in your values

# ============================================================================
# REQUIRED - Must be set for production
# ============================================================================

# Domain Configuration
DOMAIN=yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# Google Custom Search API (for car images)
# Get from: https://programmablesearchengine.google.com/
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CX=your_google_cx_here

# Session Security (use strong, randomly generated secret)
SESSION_SECRET=your_very_strong_session_secret_here_minimum_32_characters

# ============================================================================  
# OPTIONAL - Security & Observability
# ============================================================================

# Seq Logging Configuration
SEQ_ADMIN_USERNAME=admin
SEQ_ADMIN_PASSWORDHASH=  # Generate with: docker run --rm datalust/seq config hash

# Langfuse Configuration
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=https://yourdomain.com
SALT=your_random_salt_here
LANGFUSE_DB_PASSWORD=your_strong_db_password

# Redis Configuration (optional, for Langfuse performance)
REDIS_URL=redis://redis:6379

# ============================================================================  
# OPTIONAL - Performance & Scaling
# ============================================================================

# Worker processes for nginx
NGINX_WORKER_PROCESSES=auto

# Connection limits
NGINX_WORKER_CONNECTIONS=1024

# ============================================================================  
# OPTIONAL - Backup & Maintenance
# ============================================================================

# Backup configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# ============================================================================  
# OPTIONAL - Advanced Configuration
# ============================================================================

# Custom SSL certificates (if not using Let's Encrypt)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Custom environment
CUSTOM_NODE_ENV=production