{
  "openapi": "3.0.0",
  "info": {
    "title": "CarGPT API",
    "version": "1.0.0",
    "description": "AI-powered car recommendation system using Ollama with structured output validation. Find your perfect car by describing your needs in natural language.",
    "contact": {
      "name": "CarGPT Support",
      "url": "https://github.com/lucapalomba/CarGPT"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    },
    {
      "url": "https://api.cargpt.app",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Cars",
      "description": "Car recommendation and search operations with structured output"
    },
    {
      "name": "System",
      "description": "System health and session management"
    },
    {
      "name": "AI Services",
      "description": "AI-powered services with structured output validation"
    }
  ],
  "paths": {
    "/api/find-cars": {
      "post": {
        "tags": ["Cars"],
        "summary": "Find cars based on requirements with structured AI analysis",
        "description": "Analyzes user requirements and returns personalized car recommendations using structured AI output validation",
        "operationId": "findCarsStructured",
        "parameters": [
          {
            "name": "Accept-Language",
            "in": "header",
            "description": "Preferred language for response and market restriction (e.g., 'es-ES' for Spain)",
            "required": false,
            "schema": {
              "type": "string",
              "default": "en"
            }
          },
          {
            "name": "X-Use-Structured-Output",
            "in": "header",
            "description": "Enable structured output with Zod schema validation",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false
            }
          },
          {
            "name": "requirements",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "query": {
                  "type": "string",
                  "description": "Natural language car requirements",
                  "example": "I need a family SUV with good fuel economy under $30,000, preferably hybrid"
                },
                "preferences": {
                  "type": "object",
                  "description": "Specific preferences and constraints",
                  "properties": {
                    "max_price": {
                      "type": "number",
                      "description": "Maximum price budget",
                      "example": 30000
                    },
                    "min_price": {
                      "type": "number", 
                      "description": "Minimum price budget",
                      "example": 20000
                    },
                    "fuel_type": {
                      "type": "string",
                      "enum": ["gasoline", "hybrid", "electric", "diesel"],
                      "description": "Preferred fuel type"
                    },
                    "transmission": {
                      "type": "string",
                      "enum": ["manual", "automatic", "cvt"],
                      "description": "Transmission preference"
                    },
                    "seats": {
                      "type": "integer",
                      "minimum": 2,
                      "maximum": 8,
                      "description": "Required number of seats"
                    },
                    "brands": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "Preferred car brands",
                      "example": ["Toyota", "Honda", "Ford"]
                    },
                    "exclude_brands": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "Brands to exclude from results"
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Car recommendations retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "oneOf": [
                        {
                          "type": "object",
                          "description": "Structured car recommendations with validation",
                          "properties": {
                            "response": {
                              "type": "string",
                              "description": "Natural language explanation of the recommendations"
                            },
                            "cars": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "id": {
                                    "type": "string",
                                    "description": "Unique car identifier"
                                  },
                                  "make": {
                                    "type": "string",
                                    "description": "Car manufacturer"
                                  },
                                  "model": {
                                    "type": "string",
                                    "description": "Car model name"
                                  },
                                  "year": {
                                    "type": "integer",
                                    "description": "Model year"
                                  },
                                  "price": {
                                    "type": "number",
                                    "description": "Vehicle price in USD"
                                  },
                                  "fuel_type": {
                                    "type": "string",
                                    "description": "Fuel type: gasoline, hybrid, electric, or diesel"
                                  },
                                  "transmission": {
                                    "type": "string",
                                    "description": "Transmission type"
                                  },
                                  "seats": {
                                    "type": "integer",
                                    "description": "Number of seats"
                                  },
                                  "image_url": {
                                    "type": "string",
                                    "description": "URL to car image"
                                  },
                                  "confidence_score": {
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 1,
                                    "description": "AI confidence in match accuracy"
                                  },
                                  "match_reasons": {
                                    "type": "array",
                                    "items": {
                                      "type": "string"
                                    },
                                    "description": "Reasons why this car matches the criteria"
                                  },
                                  "specifications": {
                                    "type": "object",
                                    "description": "Additional technical specifications"
                                  }
                                }
                              }
                            },
                            "search_criteria": {
                              "type": "object",
                              "description": "Extracted search criteria used",
                              "properties": {
                                "budget_range": {
                                  "type": "object",
                                  "properties": {
                                    "min": {"type": "number"},
                                    "max": {"type": "number"}
                                  }
                                },
                                "fuel_preference": {"type": "string"},
                                "transmission_preference": {"type": "string"},
                                "seats_required": {"type": "integer"},
                                "primary_use_case": {"type": "string"}
                              }
                            },
                            "confidence_score": {
                              "type": "number",
                              "minimum": 0,
                              "maximum": 1,
                              "description": "Overall confidence in search results"
                            },
                            "total_results": {
                              "type": "integer",
                              "description": "Total number of cars found"
                            },
                            "search_metadata": {
                              "type": "object",
                              "properties": {
                                "total_searched": {"type": "integer"},
                                "filtered_count": {"type": "integer"},
                                "search_time_ms": {"type": "integer"},
                                "model_used": {"type": "string"}
                              }
                            }
                          }
                        }
                      ]
                    },
                    "structured_output_validation": {
                      "type": "object",
                      "properties": {
                        "schema_version": {
                          "type": "string",
                          "description": "Version of the structured output schema used"
                        },
                        "validation_passed": {
                          "type": "boolean",
                          "description": "Whether the structured output passed Zod validation"
                        },
                        "validation_errors": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "description": "Any validation errors encountered"
                        }
                      }
                    },
                    "message": {
                      "type": "string",
                      "description": "Natural language summary",
                      "example": "Found 3 cars matching your criteria, with confidence score of 0.92"
                    },
                    "metadata": {
                      "type": "object",
                      "properties": {
                        "processing_time_ms": {
                          "type": "integer",
                          "description": "Total processing time in milliseconds"
                        },
                        "ai_model_used": {
                          "type": "string",
                          "description": "AI model used for analysis"
                        },
                        "structured_output_enabled": {
                          "type": "boolean",
                          "description": "Whether structured output validation was enabled"
                        }
                      }
                    }
                  }
                },
                "examples": [
                  {
                    "success": true,
                    "data": {
                      "response": "I found 3 excellent family SUVs that match your criteria. All options offer great fuel economy with hybrid powertrains.",
                      "cars": [
                        {
                          "id": "toyota_highlander_2024",
                          "make": "Toyota",
                          "model": "Highlander",
                          "year": 2024,
                          "price": 28450,
                          "fuel_type": "hybrid",
                          "transmission": "cvt",
                          "seats": 8,
                          "image_url": "https://example.com/toyota-highlander.jpg",
                          "confidence_score": 0.95,
                          "match_reasons": ["matches_budget", "hybrid_fuel_type", "family_sized"],
                          "specifications": {
                            "engine": "2.5L 4-cylinder hybrid",
                            "horsepower": 243,
                            "mpg_combined": 36
                          }
                        }
                      ],
                      "search_criteria": {
                        "budget_range": {"min": 20000, "max": 30000},
                        "fuel_preference": "hybrid",
                        "transmission_preference": "automatic",
                        "seats_required": 7,
                        "primary_use_case": "family_commuting"
                      },
                      "confidence_score": 0.92,
                      "total_results": 3,
                      "search_metadata": {
                        "total_searched": 150,
                        "filtered_count": 3,
                        "search_time_ms": 2500,
                        "model_used": "mistral-large-3"
                      }
                    },
                    "structured_output_validation": {
                      "schema_version": "1.0.0",
                      "validation_passed": true,
                      "validation_errors": []
                    },
                    "message": "Found 3 cars matching your criteria with 92% confidence",
                    "metadata": {
                      "processing_time_ms": 2500,
                      "ai_model_used": "mistral-large-3",
                      "structured_output_enabled": true
                    }
                  }
                ]
              }
            }
          },
          "400": {
            "description": "Invalid request parameters",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "description": "Error message explaining what went wrong"
                    },
                    "structured_output_errors": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "Array of structured output validation errors"
                    },
                    "validation_details": {
                      "type": "object",
                      "properties": {
                        "schema_failed_at": {
                          "type": "string",
                          "description": "Which validation step failed"
                        },
                        "validation_time_ms": {
                          "type": "integer",
                          "description": "Time taken for validation in milliseconds"
                        }
                      }
                    }
                  }
                },
                "examples": [
                  {
                    "success": false,
                    "error": "Invalid structured output format: missing required field 'cars'",
                    "structured_output_errors": ["MISSING_REQUIRED_FIELD"],
                    "validation_details": {
                      "schema_failed_at": "REQUIRED_FIELDS_CHECK",
                      "validation_time_ms": 15
                    }
                  }
                ]
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "description": "Internal server error message"
                    },
                    "request_id": {
                      "type": "string",
                      "description": "Unique request identifier for troubleshooting"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time",
                      "description": "Error timestamp"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}